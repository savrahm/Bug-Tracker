@model IEnumerable<Project>

<h2>Projects</h2>

<div style="display: block">
    <a href="/Project/InsertProject/">Create A New Project</a>
</div>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>Project ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Assigned To</th>
            <th>Status</th>
        </tr>
    </thead>



    @foreach (var project in Model)
    {
        <tr>
            <td><a href=/Project/ViewProject/@project.ProjectId>@project.ProjectId</a></td>
            <td>@project.Title</td>
            <td>@project.Description</td>
            <td>@project.Priority</td>
            <td>@project.UserId </td>
            <td>@project.Stage</td>
        </tr>
    }
</table>

